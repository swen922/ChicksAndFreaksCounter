<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient"
    android:padding="16dp"
    tools:context=".MainActivity">


    <android.support.constraint.Guideline
        android:id="@+id/land_main_vertical_guide48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48"
        />

    <android.support.constraint.Guideline
        android:id="@+id/land_main_vertical_guide50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50"
        />

    <android.support.constraint.Guideline
        android:id="@+id/land_main_vertical_guide21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.21"
        />

    <android.support.constraint.Guideline
        android:id="@+id/land_main_vertical_guide27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.27"
        />


    <TextView
        android:id="@+id/textview_counter_freaks_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.6"
        android:gravity="right"
        android:text="@string/list_item_freak2"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginLeft="4dp"
        android:maxLines="1"
        app:autoSizeMaxTextSize="80sp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/land_main_vertical_guide21"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textview_counter_freaks"
        />

    <TextView
        android:id="@+id/textview_counter_chicks_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.6"
        android:gravity="left"
        android:text="@string/list_item_chick2"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginRight="4dp"
        android:maxLines="1"
        app:autoSizeMaxTextSize="80sp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/land_main_vertical_guide27"
        app:layout_constraintRight_toRightOf="@id/land_main_vertical_guide48"
        app:layout_constraintBottom_toTopOf="@id/textview_counter_chicks"

        />

    <TextView
        android:id="@+id/textview_counter_freaks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textColor="@color/colorPrimaryLight"
        android:textStyle="bold"
        android:gravity="center|right"
        android:paddingBottom="12dp"
        android:maxLines="1"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="500sp"
        app:autoSizeTextType="uniform"
        app:autoSizeStepGranularity="1sp"
        app:layout_constraintVertical_weight="4"
        app:layout_constraintTop_toBottomOf="@id/textview_counter_freaks_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/land_main_vertical_guide21"
        app:layout_constraintBottom_toTopOf="@id/textview_add_freak"
        />

    <TextView
        android:id="@+id/textview_counter_separator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=":"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="18dp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeMaxTextSize="50sp"
        app:autoSizeTextType="uniform"
        app:autoSizeStepGranularity="1sp"
        app:layout_constraintTop_toTopOf="@id/textview_counter_freaks"
        app:layout_constraintLeft_toLeftOf="@id/land_main_vertical_guide21"
        app:layout_constraintRight_toRightOf="@id/land_main_vertical_guide27"
        app:layout_constraintBottom_toBottomOf="@id/textview_counter_freaks"
        />

    <TextView
        android:id="@+id/textview_counter_chicks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textColor="@color/colorPrimaryLight"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="center|left"
        android:paddingBottom="12dp"
        android:maxLines="1"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="500sp"
        app:autoSizeTextType="uniform"
        app:autoSizeStepGranularity="1sp"
        app:layout_constraintVertical_weight="4"
        app:layout_constraintTop_toBottomOf="@id/textview_counter_chicks_header"
        app:layout_constraintLeft_toLeftOf="@id/land_main_vertical_guide27"
        app:layout_constraintRight_toRightOf="@id/land_main_vertical_guide48"
        app:layout_constraintBottom_toTopOf="@id/textview_add_chick"

        />


    <TextView
        android:id="@+id/textview_add_freak"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="right|top"
        android:text="@string/add_freak1"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="8dp"
        android:maxLines="2"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeMaxTextSize="80sp"
        app:autoSizeTextType="uniform"
        app:autoSizeStepGranularity="1sp"
        app:layout_constraintVertical_weight="1.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/land_main_vertical_guide21"
        app:layout_constraintTop_toBottomOf="@id/textview_counter_freaks"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@+id/textview_add_chick"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="left|top"
        android:text="@string/add_chick1"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:maxLines="2"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeMaxTextSize="80sp"
        app:autoSizeTextType="uniform"
        app:autoSizeStepGranularity="1sp"
        app:layout_constraintVertical_weight="1.5"
        app:layout_constraintTop_toBottomOf="@id/textview_counter_chicks"
        app:layout_constraintLeft_toLeftOf="@id/land_main_vertical_guide27"
        app:layout_constraintRight_toRightOf="@id/land_main_vertical_guide48"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <ListView
        android:id="@+id/listview_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/land_main_vertical_guide50"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</android.support.constraint.ConstraintLayout>